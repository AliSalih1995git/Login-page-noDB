<div class="jumbotron">
    <div class="container">
        <h1 class="text-center">Login</h1>
        
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/login" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <legend>Enter Your Email And Password Here</legend>

               
                

                <div class="form-group ">
                    <label class="mt-5" for="email">Email Address</label>
                    <input type="text" class="form-control mt-2" name="email" id="email" placeholder="Email Address" required>
                </div>

                <div class="form-group mt-4">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control mt-2" name="pw" placeholder="Password" id="pw" required>
                </div>
                <div class="form-group mt-3">
                    {{#if value}}
                    <p>Invalid email or password</p>
                    {{/if}}
                </div>


               <div class="form-group">
                   <a href="/signup">Create New Account?</a>
                </div>

                <button type="submit" value="login" class="btn btn-primary mt-3">Login</button>

            </form>
        </div>
    </div>
</div>

